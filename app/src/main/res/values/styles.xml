<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Canlah">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:icon">@drawable/logo_canlah</item>
    </style>

    <style name="Theme.Canlah" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_canlah</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Canlah</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Canlah</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Canlah</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Canlah</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Canlah</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_canlah</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_canlah</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Canlah</item>
    </style>

    <style name="ActionBar.Solid.Canlah" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_canlah</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_canlah</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_canlah</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Canlah</item>
    </style>

    <style name="ActionBar.Transparent.Canlah" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_canlah</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Canlah</item>
    </style>

    <style name="PopupMenu.Canlah" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_canlah</item>
    </style>

    <style name="DropDownListView.Canlah" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_canlah</item>
    </style>

    <style name="ActionBarTabStyle.Canlah" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_canlah</item>
    </style>

    <style name="DropDownNav.Canlah" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_canlah</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_canlah</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_canlah</item>
    </style>

    <style name="ProgressBar.Canlah" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_canlah</item>
    </style>

    <style name="ActionButton.CloseMode.Canlah" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_canlah</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Canlah.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Canlah</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Canlah</item>
    </style>
</resources>
